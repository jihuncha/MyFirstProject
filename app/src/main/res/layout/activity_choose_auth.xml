<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ChooseAuthActivity">

    <Button
        android:id="@+id/bt_auth_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Auth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bt_auth_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bt_auth_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail Auth"
        app:layout_constraintTop_toTopOf="@+id/bt_auth_sms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>